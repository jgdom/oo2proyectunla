<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibenate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class table="medidor" name="datos.Medidor">
		<id name="nroSerie" column="nroSerie">
			<generator class="identity" />
		</id>
		<many-to-one name="cliente" class="datos.Cliente" column="Cliente_idCliente" not-null="true"></many-to-one>
		<property name="direccion" column="direccion" type="string"></property>
		<property name="esBaja" column="esBaja" type="boolean"></property>
		<many-to-one name="zona" class="datos.Zona" column="Zona_idZona" not-null="true"></many-to-one>
		<many-to-one name="tarifa" class= "datos.Tarifa" column="Tarifa_idTarifa" not-null="true"></many-to-one>
		<set name="lectura" table="lectura" order-by ="idLectura asc" inverse="true" lazy="true" fetch="select">
			<key column="Medidor_nroSerie" not-null="true"/>
			<one-to-many class="datos.Lectura"/>	
		</set>
</class>
</hibernate-mapping>